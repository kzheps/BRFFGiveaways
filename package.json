{
  "name": "brff-app",
  "private": true,
  "version": "0.1.1",
  "description": "brff app boo",
  "type": "module",
  "author": "KZHEPS",
  "main": "dist-electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "start": "npm run build:main && electron .",
    "build": "vite build && electron-builder",
    "build:main": "esbuild src/electron/main.ts --bundle --platform=node --target=node16 --outfile=dist-electron/main.cjs --format=cjs --external:electron",
    "postinstall": "electron-builder install-app-deps",
    "electron": "wait-on tcp:5173 && electron .",
    "electron:dev": "concurrently -k \"npm run dev\" \"npm run electron\"",
    "electron:build": "npm run build:main && vite build && electron-builder",
    "type-check": "tsc --noEmit",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "dependencies": {
    "@tanstack/react-virtual": "^3.13.9",
    "browserify-zlib": "^0.2.0",
    "canvas-confetti": "^1.9.2",
    "clsx": "^2.1.0",
    "date-fns": "^3.3.1",
    "electron-store": "^8.2.0",
    "framer-motion": "^11.0.8",
    "lucide-react": "^0.344.0",
    "react": "^18.3.1",
    "react-confetti": "^6.1.0",
    "react-countdown": "^2.3.5",
    "react-dom": "^18.3.1",
    "react-router-dom": "^7.6.1",
    "react-virtualized": "^9.22.5",
    "stream-browserify": "^3.0.0",
    "tailwind-merge": "^2.2.1",
    "tmi.js": "^1.8.5",
    "use-sound": "^4.0.1",
    "util": "^0.12.5",
    "uuid": "^11.1.0",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@babel/plugin-transform-react-jsx": "^7.27.1",
    "@eslint/js": "^9.9.1",
    "@types/canvas-confetti": "^1.6.4",
    "@types/electron": "^1.6.10",
    "@types/node": "^22.15.29",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "@types/react-virtualized": "^9.21.29",
    "@types/tmi.js": "^1.8.6",
    "@typescript-eslint/eslint-plugin": "^8.33.1",
    "@typescript-eslint/parser": "^8.33.1",
    "@vitejs/plugin-react": "^4.5.1",
    "autoprefixer": "^10.4.18",
    "babel-plugin-flow-react-proptypes": "^26.0.0",
    "dotenv": "^16.5.0",
    "electron": "^30.5.1",
    "electron-builder": "^26.0.12",
    "eslint": "^9.9.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "globals": "^15.9.0",
    "postcss": "^8.4.35",
    "rollup-plugin-visualizer": "^6.0.1",
    "tailwindcss": "^3.4.1",
    "terser": "^5.40.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.3.0",
    "vite": "^6.3.5",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6",
    "vite-plugin-svgr": "^4.3.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.brff.giveaways",
    "productName": "BRFF-Giveaways",
    "files": [
      "dist/**/*",
      "!dist/**/*.map",
      "dist-electron/main.cjs",
      "electron/**/*",
      "package.json"
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "target": "nsis",
      "icon": "./src/assets/favicon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true
    }
  }
}
